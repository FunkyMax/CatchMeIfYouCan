<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:background="#EEFFFFFF">

    <Button
            android:text="Start"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:id="@+id/startButton"
            android:backgroundTint="#82B1FF"
            android:onClick="onButtonClicked"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="256dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="295dp" android:gravity="center" android:fontFamily="@font/coolvetica"
            android:textColor="#FFFFFF" android:textSize="18sp"
            android:layout_marginEnd="295dp" app:layout_constraintEnd_toEndOf="parent"/>
    <com.example.catchmeifyoucan.views.ArrowView
            android:layout_width="950px"
            android:layout_height="500px"
            android:id="@+id/catchMeArrowView" android:rotation="180"
            app:arrow_color="#B20288D1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="164dp"/>
    <TextView
            android:text="Catch me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/catchMeTextView" android:gravity="center"
            android:textSize="45sp"
            android:fontFamily="@font/coolvetica"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="180dp" app:layout_constraintEnd_toEndOf="parent"/>
    <com.example.catchmeifyoucan.views.ArrowView
            android:layout_width="950px"
            android:layout_height="500px"
            android:id="@+id/ifYouCanArrowView" android:rotation="0"
            app:arrow_color="#1976D2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="164dp"/>
    <TextView
            android:text="if you can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ifYouCanTextView"
            android:fontFamily="@font/coolvetica"
            android:textSize="45sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="123dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="180dp"/>
    <ImageView
            android:layout_width="33dp"
            android:layout_height="57dp" app:srcCompat="@mipmap/bt_not_conected"
            android:id="@+id/btView" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="270dp"/>
</android.support.constraint.ConstraintLayout>