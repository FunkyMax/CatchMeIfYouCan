<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:background="#D1C4E9">

    <TextView
            android:text="Score:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreTextView" android:fontFamily="@font/coolvetica"
            android:textSize="60sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="249dp"
            android:textColor="#EEFFFFFF"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score" android:fontFamily="@font/coolvetica"
            android:textSize="60sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"
            android:layout_marginEnd="249dp" app:layout_constraintEnd_toEndOf="parent" android:textColor="#EEFFFFFF"/>
    <TextView
            android:text="Highscore:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/highScoreTextView"
            android:fontFamily="@font/coolvetica"
            android:textSize="30sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="249dp" android:textColor="#EEFFFFFF"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/highScore"
            android:fontFamily="@font/coolvetica"
            android:textSize="30sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="255dp" android:textColor="#EEFFFFFF"/>
    <Button
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="52dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="326dp"
            android:fontFamily="@font/coolvetica" android:textColor="#FFFFFF" android:backgroundTint="#82B1FF"
            android:textSize="18sp" android:onClick="onButtonClicked" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="326dp"/>
</android.support.constraint.ConstraintLayout>