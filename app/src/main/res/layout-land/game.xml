<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".Activities.GameActivity">
    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/joystickView"
            android:layout_height="278dp"
            android:layout_width="340dp"
            android:visibility="visible"
            app:JV_buttonColor="#FF6E40"
            app:JV_backgroundColor="#61009688"
            app:JV_borderColor="#00796B"
            app:JV_borderWidth="4dp"
            app:JV_buttonSizeRatio="15%"
            android:layout_marginTop="255dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="575dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.347"
            app:layout_constraintVertical_bias="0.746"/>
    <com.example.catchmeifyoucan.views.PlayerHeadlightBeamView
            android:layout_width="100px"
            android:layout_height="100px"
            android:id="@+id/playerHeadlightBeamView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="184dp" android:layout_marginStart="512dp"/>
    <com.example.catchmeifyoucan.views.RandomBlueHeadlightBeamView
            android:layout_width="60px"
            android:layout_height="60px"
            android:id="@+id/randomBlueHeadlightBeamView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="209dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"/>
    <com.example.catchmeifyoucan.views.RandomYellowHeadlightBeamView
            android:layout_width="60px"
            android:layout_height="60px"
            android:id="@+id/randomYellowHeadlightBeamView"
            android:layout_marginBottom="59dp" app:layout_constraintBottom_toTopOf="@+id/joystickView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70dp"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="visible"/>
    <com.example.catchmeifyoucan.views.RandomRedHeadlightBeamView
            android:layout_width="60px"
            android:layout_height="60px"
            android:id="@+id/randomRedHeadlightBeamView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="87dp"
    />
    <TextView
            android:text="Score: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreTextView"
            android:fontFamily="@font/coolvetica" android:textSize="45sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="57dp" android:layout_marginEnd="100dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score"
            android:fontFamily="@font/coolvetica" android:textSize="45sp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Time: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeTextView"
            android:fontFamily="@font/coolvetica" android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="74dp" android:layout_marginEnd="116dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:fontFamily="@font/coolvetica" android:textSize="45sp"
            app:layout_constraintStart_toEndOf="@+id/timeTextView"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="74dp"/>
</android.support.constraint.ConstraintLayout>

