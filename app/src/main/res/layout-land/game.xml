<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".Activities.GameActivity">
    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/joystickView"
            android:layout_height="280dp"
            android:layout_width="241dp"
            android:visibility="visible"
            app:JV_buttonImage="@mipmap/fbi_hat"
            app:JV_backgroundColor="#FFFFFF"
            app:JV_borderColor="#4FC3F7"
            app:JV_borderWidth="4dp"
            app:JV_buttonSizeRatio="15%"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <com.example.catchmeifyoucan.views.HeadlightBeamView
            android:layout_width="60px"
            android:layout_height="60px"
            android:id="@+id/playerHeadlightBeamView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:circle_color="#1E88E5"
            android:visibility="invisible" android:layout_marginTop="308dp" android:layout_marginStart="644dp"/>
    <com.example.catchmeifyoucan.views.HeadlightBeamView
            android:layout_width="60px"
            android:layout_height="60px" android:id="@+id/randomGreenHeadlightBeamView"
            app:circle_color="#9CCC65" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible" android:layout_marginTop="116dp" android:layout_marginStart="488dp"/>
    <com.example.catchmeifyoucan.views.HeadlightBeamView
            android:layout_width="60px"
            android:layout_height="60px" android:id="@+id/randomYellowHeadlightBeamView"
            app:circle_color="#FBC02D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="invisible"
            android:layout_marginEnd="416dp" android:layout_marginBottom="136dp"/>
    <com.example.catchmeifyoucan.views.HeadlightBeamView
            android:layout_width="60px"
            android:layout_height="60px" android:id="@+id/randomRedHeadlightBeamView"
            app:circle_color="#D32F2F" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible" android:layout_marginEnd="416dp" android:layout_marginTop="116dp"/>
    <TextView
            android:text="Score: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreTextView"
            android:fontFamily="@font/coolvetica" android:textSize="45sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="57dp" android:layout_marginEnd="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score"
            android:fontFamily="@font/coolvetica" android:textSize="45sp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"/>
    <TextView
            android:text="Time: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeTextView"
            android:fontFamily="@font/coolvetica" android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="74dp" android:layout_marginEnd="116dp"
            app:layout_constraintEnd_toEndOf="parent" android:visibility="visible"/>
    <TextView
            android:text="45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:fontFamily="@font/coolvetica" android:textSize="45sp"
            app:layout_constraintStart_toEndOf="@+id/timeTextView"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="74dp"
            android:visibility="visible"/>
    <Button
            android:text="Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleHeadlightBeamViewsVisibility" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:onClick="toggleVisibility" android:fontFamily="@font/coolvetica"
            android:backgroundTint="#82B1FF"/>
</android.support.constraint.ConstraintLayout>

