<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".MainActivity">
    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/joystickView"
            android:layout_height="281dp"
            android:layout_width="742dp"
            android:visibility="visible"
            android:layout_marginStart="65dp"
            android:layout_marginTop="225dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="225dp"
            custom:JV_buttonColor="#FF6E40"
            custom:JV_backgroundColor="#009688"
            custom:JV_borderColor="#00796B"
            custom:JV_borderWidth="4dp"
            custom:JV_buttonSizeRatio="15%"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" custom:srcCompat="@drawable/black_ball"
            android:id="@+id/blackBall"
            android:visibility="visible" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:layout_marginBottom="139dp" app:layout_constraintBottom_toTopOf="@+id/joystickView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="325dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>

