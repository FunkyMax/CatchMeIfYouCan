<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".Activities.MainActivity">
    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/joystickView"
            android:layout_height="281dp"
            android:layout_width="742dp"
            android:visibility="visible"
            android:layout_marginStart="65dp"
            android:layout_marginTop="225dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="225dp"
            app:JV_buttonColor="#FF6E40"
            app:JV_backgroundColor="#009688"
            app:JV_borderColor="#00796B"
            app:JV_borderWidth="4dp"
            app:JV_buttonSizeRatio="15%"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <com.example.catchmeifyoucan.views.GreenCircleView
            android:layout_width="100px"
            android:layout_height="100px"
            android:id="@+id/greenCircleView"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/joystickView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="178dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="156dp" app:layout_constraintHorizontal_bias="0.189"
            app:layout_constraintVertical_bias="0.0"/>
    <com.example.catchmeifyoucan.views.BlackBallView
            android:layout_width="60px"
            android:layout_height="60px"
            android:id="@+id/blackBallView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="352dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="193dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="171dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/joystickView" android:layout_marginBottom="-100dp"/>
</android.support.constraint.ConstraintLayout>

