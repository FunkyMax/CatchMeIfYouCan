<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".MainActivity">
    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/joystickView"
            android:layout_height="281dp"
            android:layout_width="742dp"
            android:visibility="visible"
            android:layout_marginStart="65dp"
            android:layout_marginTop="225dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="225dp"
            app:JV_buttonColor="#FF6E40"
            app:JV_backgroundColor="#009688"
            app:JV_borderColor="#00796B"
            app:JV_borderWidth="4dp"
            app:JV_buttonSizeRatio="15%"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" android:id="@+id/blackBall"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="180dp" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toTopOf="@+id/joystickView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="181dp" app:srcCompat="@drawable/black_ball"/>
    <com.example.catchmeifyoucan.views.CircleView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:id="@+id/circleView"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/joystickView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="194dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="194dp"/>
</android.support.constraint.ConstraintLayout>

